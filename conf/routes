# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# The home page
GET     /                                   controllers.CustomDataController.index

# Authentication
GET     /login                              controllers.MainController.login
POST    /login                              controllers.MainController.authenticate
GET     /logout                             controllers.MainController.logout

#Custom Data
DELETE  /customData/:key                    controllers.CustomDataController.deleteCustomDataItem(key: String)
POST    /customData                         controllers.CustomDataController.addCustomDataItem

# Javascript routing
GET     /assets/javascripts/routes          controllers.MainController.javascriptRoutes

# Map static resources from the /public folder to the /public path
GET     /assets/*file                       controllers.Assets.at(path="/public", file)

